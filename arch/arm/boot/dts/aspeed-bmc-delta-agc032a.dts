/dts-v1/;

#include <dt-bindings/gpio/aspeed-gpio.h>
#include "facebook-netbmc-ast2500-common.dtsi"

/ {
	model = "DELTA AGC032A BMC";
	compatible = "delta,agc032a-bmc", "aspeed,ast2500";

	aliases {
		/*
		 * I2C switch 2-0075, pca9548, total 8 child channels
		 * assigned bus number 8-15.
		 */
		i2c8 = &imux8;
		i2c9 = &imux9;
		i2c10 = &imux10;
		i2c11 = &imux11;
		i2c12 = &imux12;
		i2c13 = &imux13;
		i2c14 = &imux14;
		i2c15 = &imux15;

		spi1 = &spi1;
		spi2 = &spi_gpio;
		serial4 = &uart5;
	};

	chosen {
		stdout-path = &uart5;
		bootargs = "console=ttyS4,115200n8 root=/dev/ram rw";
	};

	ast-adc-hwmon {
		compatible = "iio-hwmon";
		io-channels = <&adc 0>, <&adc 1>, <&adc 2>, <&adc 3>,
			      <&adc 4>, <&adc 5>, <&adc 6>, <&adc 7>;
	};

	spi_gpio: spi-gpio {
		status = "okay";
		compatible = "spi-gpio";
		#address-cells = <1>;
		#size-cells = <0>;

		gpio-sck = <&gpio ASPEED_GPIO(R, 3) GPIO_ACTIVE_HIGH>;
		gpio-mosi = <&gpio ASPEED_GPIO(R, 4) GPIO_ACTIVE_HIGH>;
		gpio-miso = <&gpio ASPEED_GPIO(R, 5) GPIO_ACTIVE_HIGH>;
		num-chipselects = <1>;
		cs-gpios = <&gpio ASPEED_GPIO(R, 2) GPIO_ACTIVE_LOW>;

		tpmdev@0 {
			compatible = "tcg,tpm_tis-spi";
			spi-max-frequency = <33000000>;
			reg = <0>;
		};
	};
};

&fmc {
	status = "okay";

	flash@0 {
		status = "okay";
		m25p,fast-read;
		label = "spi0.0";
#include "facebook-bmc-flash-layout.dtsi"

		partitions {
			data0@1c00000 {
				reg = <0x1c00000 0x6400000>;
			};

			flash0@0 {
				reg = <0x0 0x8000000>;
			};
		};
	};

	flash@1 {
		status = "okay";
		m25p,fast-read;
		label = "spi0.1";

		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;

			flash1@0 {
				reg = <0x0 0x8000000>;
				label = "flash1";
			};
		};
	};
};

&uart2 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_txd2_default
		     &pinctrl_rxd2_default>;
};

&uart4 {
	status = "okay";
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_txd4_default
		     &pinctrl_rxd4_default>;
};

&i2c0 {
	status = "okay";
	multi-master;
	bus-frequency = <1000000>;
	aspeed,hw-timeout-ms = <1000>;
};

&i2c1 {
	status = "okay";
};

&i2c2 {
	status = "okay";

	i2c-switch@75 {
		compatible = "nxp,pca9548";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0x75>;

		imux8: i2c@0 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <0>;
		};

		imux9: i2c@1 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <1>;
		};

		imux10: i2c@2 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <2>;
		};

		imux11: i2c@3 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <3>;
		};

		imux12: i2c@4 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <4>;
		};

		imux13: i2c@5 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <5>;
		};

		imux14: i2c@6 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <6>;
		};

		imux15: i2c@7 {
			#address-cells = <1>;
			#size-cells = <0>;
			reg = <7>;
		};
	};
};


&i2c3 {
	status = "okay";

	lm75@4f {
		compatible = "national,lm75";
		reg = <0x4f>;
	};
};

&i2c4 {
	status = "okay";

	lm75@4b {
		compatible = "national,lm75";
		reg = <0x4b>;
	};
	lm75@49 {
		compatible = "national,lm75";
		reg = <0x49>;
	};
	lm75@4a {
		compatible = "national,lm75";
		reg = <0x4a>;
	};
	lm75@4e {
		compatible = "national,lm75";
		reg = <0x4e>;
	};
};

&i2c5 {
	status = "okay";
};

&i2c6 {
	status = "okay";
};

&i2c7 {
	status = "okay";
};

&adc {
	status = "okay";
};

&ehci1 {
	status = "okay";
};

&uhci {
	status = "okay";
};

&sdhci1 {
	aspeed,sdhci-disable-dma;
};

&gpio {
	pin_gpio_a3 {
		gpios = <&gpio ASPEED_GPIO(A, 3) GPIO_ACTIVE_LOW>;
		output;
		line-name = "BMC_EMMC_RST_N_R";
	};

	pin_gpio_aa0 {
		gpios = <&gpio ASPEED_GPIO(AA, 0) GPIO_ACTIVE_LOW>;
		input;
		line-name = "DEBUG_PRESENT_N";
	};

	pin_gpio_aa1 {
		gpios = <&gpio ASPEED_GPIO(AA, 1) GPIO_ACTIVE_LOW>;
		output;
		line-name = "SYS_CPLD_RST_N";
	};

	pin_gpio_aa2 {
		gpios = <&gpio ASPEED_GPIO(AA, 2) GPIO_ACTIVE_LOW>;
		input;
		line-name = "SYS_CPLD_INT_N";
	};

	pin_gpio_aa7 {
		gpios = <&gpio ASPEED_GPIO(AA, 7) GPIO_ACTIVE_LOW>;
		output;
		line-name = "BMC_SCM_CPLD_EN";
	};

	pin_gpio_ab0 {
		gpios = <&gpio ASPEED_GPIO(AB, 0) GPIO_ACTIVE_HIGH>;
		input;
		line-name = "CPLD_INT_BMC";
	};

	pin_gpio_ac5 {
		gpios = <&gpio ASPEED_GPIO(AC, 5) GPIO_ACTIVE_LOW>;
		input;
		line-name = "SCM_LPC_FRAME_N";
	};

	pin_gpio_ac6 {
		gpios = <&gpio ASPEED_GPIO(AC, 6) GPIO_ACTIVE_LOW>;
		input;
		line-name = "SCM_LPC_SERIRQ_N";
	};

	pin_gpio_ac7 {
		gpios = <&gpio ASPEED_GPIO(AC, 7) GPIO_ACTIVE_LOW>;
		input;
		line-name = "BMC_LPCRST_N";
	};

	pin_gpio_e2 {
		gpios = <&gpio ASPEED_GPIO(E, 2) GPIO_ACTIVE_HIGH>;
		input;
		line-name = "TH3_POWER_OK";
	};

	pin_gpio_f4 {
		gpios = <&gpio ASPEED_GPIO(F, 4) GPIO_ACTIVE_HIGH>;
		input;
		line-name = "CPU_CATERR_MSMI";
	};

	pin_gpio_g0 {
		gpios = <&gpio ASPEED_GPIO(G, 0) GPIO_ACTIVE_HIGH>;
		output;
		line-name = "BMC_JTAG_MUX_IN";
	};

	pin_gpio_g1 {
		gpios = <&gpio ASPEED_GPIO(G, 1) GPIO_ACTIVE_LOW>;
		output;
		line-name = "DOM_FPGA1_JTAG_EN_N";
	};

	pin_gpio_g2 {
		gpios = <&gpio ASPEED_GPIO(G, 2) GPIO_ACTIVE_LOW>;
		output;
		line-name = "DOM_FPGA2_JTAG_EN_N";
	};

	pin_gpio_g4 {
		gpios = <&gpio ASPEED_GPIO(G, 4) GPIO_ACTIVE_HIGH>;
		input;
		line-name = "BMC_CPLD_BOARD_REV_ID0";
	};

	pin_gpio_g5 {
		gpios = <&gpio ASPEED_GPIO(G, 5) GPIO_ACTIVE_HIGH>;
		input;
		line-name = "BMC_CPLD_BOARD_REV_ID1";
	};

	pin_gpio_g6 {
		gpios = <&gpio ASPEED_GPIO(G, 6) GPIO_ACTIVE_HIGH>;
		input;
		line-name = "BMC_CPLD_BOARD_TYPE";
	};

	pin_gpio_g7 {
		gpios = <&gpio ASPEED_GPIO(G, 7) GPIO_ACTIVE_HIGH>;
		input;
		line-name = "BMC_CPLD_BOARD_REV_ID2";
	};

	pin_gpio_i4 {
		gpios = <&gpio ASPEED_GPIO(I, 4) GPIO_ACTIVE_HIGH>;
		output;
		line-name = "BMC_SPI1_CS0";
	};

	pin_gpio_i5 {
		gpios = <&gpio ASPEED_GPIO(I, 5) GPIO_ACTIVE_HIGH>;
		output;
		line-name = "BMC_SPI1_CLK";
	};

	pin_gpio_i6 {
		gpios = <&gpio ASPEED_GPIO(I, 6) GPIO_ACTIVE_HIGH>;
		line-name = "BMC_SPI1_MOSI";
	};

	pin_gpio_i7 {
		gpios = <&gpio ASPEED_GPIO(I, 7) GPIO_ACTIVE_HIGH>;
		line-name = "BMC_SPI1_MISO";
	};

	pin_gpio_j0 {
		gpios = <&gpio ASPEED_GPIO(J, 0) GPIO_ACTIVE_HIGH>;
		output;
		line-name = "PWR_CPLD_JTAG_EN_N";
	};

	pin_gpio_j1 {
		gpios = <&gpio ASPEED_GPIO(J, 1) GPIO_ACTIVE_LOW>;
		output;
		line-name = "SYS_CPLD_JTAG_EN_N";
	};

	pin_gpio_j2 {
		gpios = <&gpio ASPEED_GPIO(J, 2) GPIO_ACTIVE_LOW>;
		output;
		line-name = "SCM_CPLD_JTAG_EN_N";
	};

	pin_gpio_j3 {
		gpios = <&gpio ASPEED_GPIO(J, 3) GPIO_ACTIVE_LOW>;
		output;
		line-name = "FCM_CPLD_JTAG_EN_N";
	};
};

&jtag {
	status = "okay";
};

&spi1 {
	status = "okay";
	compatible = "aspeed,ast2500-spi-master";

	spidev@0 {
		compatible = "rohm,dh2228fv";
		spi-max-frequency = <8250000>;
		reg = <0>;
	};
};
